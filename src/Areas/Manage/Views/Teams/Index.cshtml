@model PaginatedList<Team>

@{
    ViewData["Title"] = "Manage Teams";
}

@await Component.InvokeAsync("DivisionTabs")

@if (!Model.Any()) {
    Html.RenderPartial("NoRecords");
    return;
}

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Manager</th>
            <th>@Html.Partial("CreateNew")</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var team in Model) {
            <tr>
                <td>@team.Name</td>
                <td>
                    <div class="d-flex justify-content-between">
                      <span>@team.Manager.FullName</span>
                      @if (!string.IsNullOrWhiteSpace(team.Manager.Email)) {
                        <a class="ml-2" href="mailto:@(team.Manager.Email)"><span class="icon icon-mail"></span></a>
                      }
                    </div>
                </td>
                <td>@Html.Partial("Actions", team)</td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("Pagination")