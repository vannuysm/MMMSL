@model EditTeamModel

@{
    ViewData["Title"] = "Edit Team";
}

<form asp-action="Edit" asp-route-id="@Model.Team.Id" method="post">
    @if (!ViewData.ModelState.IsValid) {
        <div class="alert alert-danger" asp-validation-summary="All"></div>
    }

    <div class="form-group row">
        <label asp-for="Team.DivisionId" class="col-sm-2 col-form-label">Division</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Team.Division.Name</p>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Team.Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Team.Name" class="form-control" placeholder="Name" required="required" />
        </div>
    </div>

    <div class="form-group row">
        <label for="manager-select" class="col-sm-2 col-form-label">Manager(s)</label>
        <div class="col-sm-10">
            <select id="manager-select" asp-items="Model.Profiles" class="form-control custom-select w-auto"></select>
            <button id="manager-save-button" type="button" class="btn btn-success"><span class="icon icon-plus"></span> Add</button>
            
            <ul id="manager-list" class="list-group list-group-flush mt-2">
                @for (var i = 0; i < Model.Team.Managers.Count; i++) {
                    <li class="list-group-item">
                        @Model.Team.Managers[i].Profile.FullName
                        <input type="hidden" name="Managers[@i]" value="@Model.Team.Managers[i].ProfileId" />
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-success">
                <span class="icon icon-edit"></span> Edit
            </button>
        </div>
    </div>

    <input id="team-id" name="Id" type="hidden" value="@Model.Team.Id" />
</form>

@section Scripts {
    <script type="text/javascript">InitiateManagerSelect()</script>
}