@model Profile

@{
    ViewData["Title"] = "Create a New Profile";
}

<form asp-action="Create" method="post">
  @if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger" asp-validation-summary="All"></div>
  }
  
  <div class="form-group row">
    <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
    <div class="col-sm-10">
      <input asp-for="FirstName" class="form-control" placeholder="First Name" required="required" />
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
      <input asp-for="LastName" class="form-control" placeholder="Last Name" required="required" />
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input asp-for="Email" class="form-control" placeholder="email@example.com" />
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-success">
          <span class="icon icon-plus"></span> Create
      </button>
    </div>
  </div>
</form>