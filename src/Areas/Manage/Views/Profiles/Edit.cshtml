@model EditProfileModel

@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="Edit" asp-route-id="@Model.Profile.Id" method="post">
  @if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger" asp-validation-summary="All"></div>
  }

  <div class="form-group row">
    <label asp-for="Profile.FirstName" class="col-sm-2 col-form-label">First Name</label>
    <div class="col-sm-10">
      <input asp-for="Profile.FirstName" class="form-control" placeholder="First Name" required="required" />
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Profile.LastName" class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
      <input asp-for="Profile.LastName" class="form-control" placeholder="Last Name" required="required" />
    </div>
  </div>

  <div class="form-group row">
    <label asp-for="Profile.Email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input asp-for="Profile.Email" class="form-control" placeholder="email@example.com" />
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <div class="form-check form-check-inline">
        <label class="form-check-label">
          <input class="form-check-input" asp-for="MakeAdministrator"> Administrator
        </label>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-success">
          <span class="icon icon-edit"></span> Edit
      </button>
    </div>
  </div>

  <input name="Id" type="hidden" value="@Model.Profile.Id" />
</form>