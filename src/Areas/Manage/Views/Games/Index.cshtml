@model PaginatedList<Game>

@{
    ViewData["Title"] = "Manage Games";
}

@await Component.InvokeAsync("DivisionTabs")

@if (!Model.Any()) {
    Html.RenderPartial("NoRecords");
    return;
}

<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Date/Time</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th>@Html.Partial("CreateNew")</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var game in Model) {
            <tr>
                <td>@(game.DateAndTime.ToString("yyyy-MM-dd hh:mm tt"))</td>
                <td>@game.HomeTeam.Name</td>
                <td>@game.AwayTeam.Name</td>
                <td>@Html.Partial("Actions", game)</td>
            </tr>
        }
    </tbody>
</table>

