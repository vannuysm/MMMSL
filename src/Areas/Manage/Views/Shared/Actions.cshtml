<div class="app-actions text-right">
    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@Model.Id"><span class="icon icon-edit"></span> Edit</a>
    <button class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model.Id" data-toggle="modal" data-target="#delete-confirmation-@(Model.Id)"><span class="icon icon-erase"></span> Delete</button>

    <div class="modal fade" id="delete-confirmation-@(Model.Id)" tabindex="-1" role="dialog" aria-labelledby="delete-confirmation-title-@(Model.Id)" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="delete-confirmation-title-@(Model.Id)">Delete Confirmation</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <strong>Are you sure you want to delete this item?</strong>
                </div>

                <div class="modal-footer d-block">
                    <form class="d-flex justify-content-between" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger"><span class="icon icon-erase"></span> Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>