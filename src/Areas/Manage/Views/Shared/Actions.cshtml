@model string

<div class="app-actions text-right">
    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@Model"><span class="icon icon-edit"></span> Edit</a>
    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#delete-confirmation" data-target-form="#form-delete-@Model"><span class="icon icon-erase"></span> Delete</button>
</div>

<form class="hidden-xs-up" id="form-delete-@Model" asp-action="Delete" asp-route-id="@Model"></form>