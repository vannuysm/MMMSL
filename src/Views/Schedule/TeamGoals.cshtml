@model TeamGoalsModel

<h4 class="mb-2 mt-2">@Model.Team.Name</h4>
<ul class="list-group list-group-flush mt-2">
    @if (!Model.Goals.Any()) {
        <li class="list-group-item"><span style="color: #444;">None</span></li>
    }

    @foreach (var goal in Model.Goals.OrderByDescending(g => g.Count)) {
        <li class="list-group-item">
            <span class="badge badge-default mr-1">@goal.Count</span>
            <span style="color: #444;">@goal.Player.FullName</span>
        </li>
    }
</ul>