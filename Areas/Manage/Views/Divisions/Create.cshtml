@model Division

@{
    ViewData["Title"] = "Create a New Division";
}

<form asp-action="Create" method="post">
  @if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger" asp-validation-summary="All"></div>
  }

  <div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input asp-for="Name" class="form-control" placeholder="Name" required="required" />
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <button type="submit" class="btn btn-success">
          <span class="icon icon-plus"></span> Create
      </button>
    </div>
  </div>
</form>