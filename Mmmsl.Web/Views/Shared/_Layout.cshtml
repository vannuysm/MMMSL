<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href='http://fonts.googleapis.com/css?family=Poiret+One|PT+Serif|Open+Sans:400,300' rel='stylesheet' type='text/css'>

    @Styles.Render("~/assets/css/vendor")
    @Styles.Render("~/assets/css/app")

    @Scripts.Render("~/assets/js/modernizr")
</head>
<body>
    <header class="header-content container">
        <div class="clearfix">
            <a href="@Url.Action("Index", "Home")">
                <img class="logo" src="@Url.Content("~/assets/images/mmmsl_logo.png")" alt="Mid-Michigan Mens Soccer League" />
            </a>

            <ul class="nav nav-pills pull-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Open <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Schedules/Scores</a></li>
                        <li><a href="#">Rankings</a></li>
                        <li><a href="#">Teams</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Over 30 <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Schedules/Scores</a></li>
                        <li><a href="#">Rankings</a></li>
                        <li><a href="#">Teams</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Over 40 <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li><a href="#">Schedules/Scores</a></li>
                        <li><a href="#">Rankings</a></li>
                        <li><a href="#">Teams</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <hr/>
    </header>

    <div class="body-content container">
        @RenderBody()
    </div>

    <footer class="footer-content container">
        <hr />
        <p class="copyright">&copy; @DateTime.Now.Year - Mid-Michigan Mens Soccer League</p>
    </footer>

    @Scripts.Render("~/assets/js/vendor")
    @RenderSection("scripts", required: false)
</body>
</html>
